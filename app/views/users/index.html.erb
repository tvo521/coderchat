<div class="col-md-8 col-md-offset-2">
  <table class="table table-bordered">
    <thead>
      <tr>
        <% %w(Name Email JoinDate Action).each do |title| %>
          <th><%= title %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |usr| %>
        <tr>
          <td><%= usr.name %></td>
          <td><%= usr.email %></td>
          <td><%= usr.created_at.to_s %></td>
          <td>
            <%= link_to 'Send Message', new_user_message_path(usr), class: 'btn btn-info' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
